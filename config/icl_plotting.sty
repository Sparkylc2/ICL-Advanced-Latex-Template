 \pgfplotsset{
     every axis/.append style = {
         axis background/.style = {
             fill = cBackground,
         },
         xmajorgrids = true,
         ymajorgrids = true,
         xminorgrids = true,
         yminorgrids = true,
         major grid style = {
             line width = 0.7pt,
             solid,
             opacity = 0.8,
         },
         minor grid style = {
             line width = 0.5pt,
             densely dashed,
             opacity = 0.5,
         },
         minor x tick num = 1,
         minor y tick num = 1,
         tick align = outside,
         minor tick length = 2pt,
         major tick length = 4pt,
         tick label style = {
            font = \small\fontseries{l}\selectfont,
         },
         % label style = {
         %     font = \regular,
         % },
         axis line style = {
             line width = 1pt,
         }
    },
    every axis plot/.append style = {
        line width = 2pt,
        mark size = 4pt,
        mark options = {
            mark size = 4pt,
            line width = 1.25pt,
            fill opacity = 1,
            draw opacity = 1,
        },
    },
    every axis legend/.append style = {
        font = \small\fontseries{l}\selectfont,
        cells = {anchor = west},
        legend style = {
            fill = cBackground!90,
            draw = black,
            line width = 1pt,
            rounded corners = 3pt,
            inner sep = 8pt,
            outer sep = 0pt,
        },
        legend cell align = left,
        legend image post style = {
            scale = 1,
        },
    },
 }


